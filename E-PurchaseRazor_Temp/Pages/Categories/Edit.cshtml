@page
@model E_PurchaseRazor_Temp.Pages.Categories.EditModel

<form method="post">
    <input asp-for="Categorys.Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary">Edit Category</h3>
            <hr />
        </div>

       @* <div asp-validation-summary="All" class="text-danger"></div>*@

        <div class="mb-3 row">
            <label asp-for="Categorys.Name" class="p-0"></label>
            <input asp-for="Categorys.Name" class="form-control" />
            <span asp-validation-for="Categorys.Name" class="text-danger"></span>
        </div>
        <div class="mb-3 row">
            <label asp-for="Categorys.DisplayOrder" class="p-0"></label>
            <input asp-for="Categorys.DisplayOrder" class="form-control" />
            <span asp-validation-for="Categorys.DisplayOrder" class="text-danger"></span>

        </div>


        <div class="row">
            <div class="col-6 col-mid-3 ">
                <button type="submit" class="btn btn-primary form-control">Update</button>
            </div>
            <div class="col-6 col-mid-3">
                <a asp-page="/Categories/index" class="btn btn-outline-secondary border form-control">Back to List</a>
            </div>
        </div>

    </div>
</form>