@page
@model E_PurchaseRazor_Temp.Pages.Categories.IndexModel

<div action="container">
    <div class="row pt-4">

        <div class="col-6">
            <h3 class="text-primary">Category List</h3>
        </div>

        <div class="col-6 text-end">
            <a asp-page="/Categories/create" class="btn btn-primary mb-2">
                <i class="bi bi-plus-circle"></i> Create New Category
                </a>

        </div>
    </div>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    Category Name
                </th>
                <th>
                    Display Order
                </th>
                <th>

                </th>
            </tr>
        </thead>

        <tbody>
            @foreach (var obj in Model.CategoryList.OrderBy(x => x.DisplayOrder))
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.DisplayOrder</td>
                    <td class="w-75 btn-group" role="group">
                        <a asp-page="/Categories/Edit"  asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                            <i class="bi bi-pencil-square"></i> Edit
                        </a>
                        <a asp-page="/Categories/Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                            <i class="bi bi-trash3-fill "></i> Delete
                        </a>
                    </td>
                </tr>
            }

        </tbody>

    </table>

</div>
 