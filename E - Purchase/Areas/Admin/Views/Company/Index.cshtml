@model List<Company>


<div class="card shadow border-0 mt-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Company List</h2>
            </div>
        </div>
    </div>

    <div class="card-body p-4">
        <div action="container">
            <div class="row pt-4">

                <div class="col-12 text-end mb-4">
                    <a asp-controller="Company" asp-action="Create" class="btn btn-primary mb-2">
                        <i class="bi bi-plus-circle"></i> Create New 

                    </a>
                </div>
            </div>
            <table id="tblTable" class="table table-bordered table-striped">
                <thead>
                    <tr>
                        <th>
                            Comapany Name
                        </th>
                        <th>
                            State
                        </th>
                        <th>
                            City
                        </th>
                        <th>
                            Postal Code
                        </th>
                        <th>
                            Street Address
                        </th>
                        <th>
                            Phone Number
                        </th>
                        <th>
                            
                        </th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var obj in Model.OrderBy(x => x.Name))
                    {
                        <tr>
                            <td>@obj.Name</td>
                            <td>@obj.State</td>
                            <td>@obj.City</td>
                            <td>@obj.PostalCode</td>
                            <td>@obj.StreetAddress</td>
                            <td>@obj.PhoneNumber</td>

                            <td class="w-75 btn-group" role="group">
                                <a asp-controller="Company" asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary mx-2">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-controller="Company" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-2">
                                    <i class="bi bi-trash3-fill "></i> Delete
                                </a>
                            </td>
                        </tr>
                    }

                </tbody>

            </table>

        </div>
    </div>

   
</div>

@section Scripts {
    <script src="~/js/company.js"></script>
}


 